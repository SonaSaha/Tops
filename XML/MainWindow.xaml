<Window x:Class="SqlHomework1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SqlHomework1"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Width="200" Height="150">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Column="0" Grid.Row="0" Content="User name" ></Label>
        <Label Grid.Column="0" Grid.Row="1" Content="Password"></Label>
        <TextBox Name="name" Grid.Column="1" Grid.Row="0" Width="80" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <PasswordBox Name="password" Grid.Column="1" Grid.Row="1" Width="80" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <Button  Grid.Row="2" HorizontalAlignment="Center" Content="Submit" Grid.ColumnSpan="2"  Width="150" Height="50" Click="Click_button"></Button>

    </Grid>
</Window>
